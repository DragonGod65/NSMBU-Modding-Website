---
import HeaderLink from './HeaderLink.astro';
import '../styles/components/banner.css';
import '../styles/patterns.css';
import '../styles/main.css'
import '../styles/animations.css';

---
<head>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<header>
	<nav class="pattern--hashes">
		<a class="site-logo" href="/"><img src="/sme_banner.png" ></a>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/gallery">Gallery</HeaderLink>
			<HeaderLink href="/mods">Mods</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.youtube.com/@SuperMarioEvolution"><i class="fa-brands fa-youtube"></i></a>
			<a href="https://discord.com/invite/RG9QhUe"><i class="fa-brands fa-discord"></i></a>
			<a href="https://x.com/TeamSMEvolution"><i class="fa-brands fa-twitter"></i></a>
		</div>
	</nav>
</header>
<style>
	.site-logo{
		width: 15%;
	}

	header {
		margin: 0;
		padding: 0 1em;		
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		border-radius: 16px;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
		scale: 125%;
		margin-right: 2.5%
	}
	.social-links a:hover {
		color: rgb(var(--evolution-blue-rgb));
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
